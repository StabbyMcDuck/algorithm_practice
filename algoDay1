
function reverseString(str) {
  var str;
  var splitstr = str.split('');
  var reversestr = splitstr.reverse();
  
  str = reversestr.join('');
    
  return str;
}

reverseString("hello");

function factorialize(num) {
 
  if (num < 0)
      return -1;
  else if (num === 0)
      return 1;
  else 
    return (num * factorialize(num - 1));
  
  return num;
}

factorialize(5);
